<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-3">
            <h1><%= title %></h1>

            
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Movie Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Movie Title"
                    name="name"
                    value="<%= movie.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="yearNumberField">Year</label>
                    <input type="number" class="form-control"
                    id="yearNumberField"
                    placeholder="Enter the Release Year"
                    name="year"
                    value="<%= movie.year %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="directorTextField">Director</label>
                    <input type="text" class="form-control"
                    id="directorTextField"
                    placeholder="Enter the Movie Director's Name"
                    name="director"
                    value="<%= movie.director %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="genreTextField">Genre</label>
                    <input type="text" class="form-control"
                    id="genreTextField"
                    placeholder="Enter the Genre"
                    name="genre"
                    value="<%= movie.genre %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="runtimeNumberField">Runtime (in minutes)</label>
                    <input type="number" class="form-control"
                    id="RuntimeTextField"
                    placeholder="Enter the Movie's Runtime in Minutes"
                    name="runtime"
                    value="<%= movie.runtime %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="afs fa-edit"></i>Submit</button>

                    <a href="/moviess/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>

    </div>
</div>